(alias
 (name print-merlins)
 (deps lib/.merlin-conf exe/.merlin-conf)
 (action (run ./sanitize-dot-merlin/sanitize_dot_merlin.exe %{deps})))

(alias
 (name print-merlins-pp)
 (deps pp-with-expand/.merlin-conf)
 (action (run ./sanitize-dot-merlin/sanitize_dot_merlin.exe %{deps})))

(alias
 (name print-merlins-future-syntax)
 (deps future-syntax/.merlin-conf)
 (action (run ./sanitize-dot-merlin/sanitize_dot_merlin.exe %{deps})))
